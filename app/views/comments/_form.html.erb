 <%= form_for [comment] do |f| %>
   
   <div class="form-group">
     <%= f.label :body %>
     <%= f.text_area :body, rows: 1, class: 'form-control', placeholder: "Enter post body" %>
   </div>
   <div class="form-group">
     <%= f.submit "Save", class: 'btn btn-success' %>
   </div>


 <% end %>

